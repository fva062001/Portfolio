---
import GitHub from "./icons/GitHub.astro"
import NextJS from "./icons/NextJS.astro"
import Tailwind from "./icons/Tailwind.astro"
import Link from "./icons/Link.astro"
import LinkButton from "./LinkButton.astro"
import React from "./icons/React.astro"
import Redux from "./icons/Redux.astro"
import Python from "./icons/Python.astro"
import AstroIcon from "./icons/AstroIcon.astro"

const TAGS = {
  NEXT: {
    name: "Next.js",
    class: "bg-black text-white",
    icon: NextJS,
  },
  TAILWIND: {
    name: "Tailwind CSS",
    class: "bg-[#003159] text-white",
    icon: Tailwind,
  },
  REACT: {
    name: "React",
    class: "bg-black text-white",
    icon: React,
  },
  REDUX: {
    name: "Redux",
    class: "bg-purple-600 text-white",
    icon: Redux,
  },
  REACTNATIVE: {
    name: "React Native",
    class: "bg-black text-white",
    icon: React,
  },
  PYTHON: {
    name: "Python",
    class: "bg-blue-500 text-white",
    icon: Python,
  },
  ASTRO: {
    name: "Astro",
    class: "bg-black text-white",
    icon: AstroIcon,
  },
}
const PROJECTS = [
  {
    title: "Atlas - My software Startup",
    description:
      "Atlas is an innovative startup specializing in developing cloud-based solutions. I've created an engaging promotional landing page designed to showcase what Atlas truly offers and to captivate visitors' interest in our cloud-based solutions.",
    link: "https://www.atlas-io.com/",
    image: "/projects/atlas.webp",
    tags: [TAGS.NEXT, TAGS.TAILWIND],
  },
  {
    title: "SINAP  - Sistema Nacional de Areas Protegidas",
    description:
      "This is SINAP, better called Sistema Nacional De Areas Protegidas made in the Ministry of Environment in . This system is in charge of the process of selling tickets for parks in the Dominican Republic",
    link: "https://sinap.ambiente.gob.do/",
    image: "/projects/sinap.webp",
    tags: [TAGS.REACT, TAGS.TAILWIND, TAGS.REDUX],
  },
  {
    title: "DotEase",
    description:
      "DotEase is a revolutionary mobile application designed to bridge the accessibility gap for individuals with visual disabilities in the Dominican Republic. This project addresses the challenges faced by the visually impaired community by translating Braille texts into Spanish.",
    image: "/projects/dotease.webp",
    github: "https://github.com/fva062001/dot-ease-frontend",
    tags: [TAGS.REACTNATIVE, TAGS.TAILWIND, TAGS.PYTHON],
  },
  {
    title: "Linea Verde",
    description:
      "Linea Verde is a government system designed for citizens to report environmental issues. The main goal of the app is to promote environmental awareness and engagement.",
    image: "/projects/linea.webp",
    link: "https://lineaverde.gob.do/",
    tags: [TAGS.ASTRO, TAGS.TAILWIND],
  }
]
---

<div class="flex flex-col gap-y-16">
  {
    PROJECTS.map(({ image, title, description, tags, link, github }) => (
    <article class="flex flex-col space-x-0 space-y-8 group md:flex-row md:space-x-8 md:space-y-0">
  <div class="w-full md:w-1/2">
    <div class="relative flex flex-col items-center col-span-6 row-span-5 gap-8 transition duration-500 ease-in-out transform shadow-xl overflow-clip rounded-xl sm:rounded-xl md:group-hover:-translate-y-1 md:group-hover:shadow-2xl lg:border lg:border-gray-800 lg:hover:border-gray-700 lg:hover:bg-gray-800/50">
      <img alt="Some description xd" class="object-cover object-top w-full h-56 transition duration-500 sm:h-full md:scale-110 md:group-hover:scale-105" loading="lazy" src={image} />
    </div>
  </div>

  <div class="w-full md:w-1/2 md:max-w-lg">
    <h3 class="text-2xl font-bold text-gray-800 dark:text-gray-100">
      {title}
    </h3>
    <div class="flex flex-wrap mt-2">
      <ul class="flex flex-row mb-2 gap-x-2">
          {tags.map((tag) => (
            <li>
              <span
                class={`flex gap-x-2 rounded-full text-xs ${tag.class} py-1 px-2 `}
              >
                <tag.icon class="size-4" />
                {tag.name}
              </span>
            </li>
          ))}
        </ul>

      <div class="mt-2 text-gray-700 dark:text-gray-400">{description}</div>
      <footer class="flex items-end justify-start mt-4 gap-x-4">
          {github && (
            <LinkButton href={github}>
              <GitHub class="size-6" />
              Code
              
            </LinkButton>
          )}
          {link && (
            <LinkButton href={link}>
              <Link class="size-4" />
              Preview
            </LinkButton>
          )}
        </footer>
    </div>
  </div>
</article>
    ))
  }
</div>



